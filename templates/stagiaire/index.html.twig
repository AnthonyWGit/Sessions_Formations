                    <p class="titreCard"> {{ stagiaire.nom }} </p>
                    <div class="imgCard">
                        <img src=" {{asset('img/iconT.png')}}" alt="profile">
                    </div>
                    <p class="detail">Voir les d√©tails du stagiaire : <a href=" {{path("detailStagiaire", {'id' : stagiaire.id}) }}"> Ici</a></p>
                    <p class="detail"><a href=" {{path("deleteStagiaire", {'id' : stagiaire.id}) }}">Supprimer </a></p>

            </div>
            {% endfor %}
    </div>


        
{% endblock %}
