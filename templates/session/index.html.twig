{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    <h1>Liste des sessions</h1>
    <ul>
        {% for session in sessions %}
            <li> <a href=" {{ path("detailSession" , {'id' : session.id}) }}">{{ session.titre }}</a></li>
            <p>Places Max : {{session.places}} </p>
            {% set  currentDate = "now"|date("Y-m-d") %}
            {% if currentDate < session.dateSessionFinFormat %}
                <p>Place(s) restantes  {{ session.places - session.stagiaires | length }}</p>
            {% else %}
                <p>La session est ferm√©e</p>
            {% endif %}
        {% endfor %}
    </ul>

    <p> <a href=" {{ path('newSession')}} ">Ajouter</a> une session</p>
{% endblock %}
